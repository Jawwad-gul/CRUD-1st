@model viewModel
@{
	ViewData["Title"] = "Create";
}
<form method="post" asp-action="Create" id="createForm">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary"> Create User</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="user.Uname"></label>
			<input asp-for="user.Uname" class="form-control" />
			<span asp-validation-for="user.Uname" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="user.Upass"></label>
			<input asp-for="user.Upass" class="form-control" />
			<span asp-validation-for="user.Upass" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label>Roles</label> <br />
			<div>
				@if (Model.roles.Any())
				{
					foreach (var role in Model.roles)
					{
						<input type="checkbox" name="SelectedIds" value="@role.Rid" id="role_@role.Rid" class="form-check-input" />
						<label for="role_@role.Rid">@role.Rname</label>
					}
				}
				else
				{
					<p class="text-danger">*No roles found</p>
				}
			</div>

			<span asp-validation-for="SelectedIds" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-controller="User" asp-action="index" class="btn btn-secondary">Back to List</a>
	</div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="/js/crudCalls.js"></script>



