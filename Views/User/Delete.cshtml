@model viewModel
@{
	ViewData["Title"] = "Delete";
}

<form method="post" id="deleteForm" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit User</h2>
			<hr />
		</div>
		<div class="mb-3">
			<input type="hidden" asp-for="user.Uid" />
			<label asp-for="user.Uname"></label>
			<input disabled asp-for="user.Uname" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="user.Upass"></label>
			<input asp-for="user.Upass" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label>Role(s):</label> <br />
			@foreach (var role in Model.roles)
			{
				<input type="checkbox" disabled name="SelectedIds" value="@role.Rid" id="role_@role.Rid"
				@if (Model.SelectedIds.Contains(role.Rid))
				{
					<text>checked</text>
				}

				/>
				<label for="role_@role.Rid">@role.Rname</label>
			}
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="User" asp-action="index" class="btn btn-secondary">Back to List</a>
	</div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="/js/crudCalls.js"></script>

